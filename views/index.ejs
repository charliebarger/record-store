<%- include("include/_navigation") -%>
  <main class="flex-grow-1 " style="overflow-y: scroll; height:100vh; flex-basis: 50%;">
    <div class="container p-4">

      <h1 class="text-capitalize">
        <%= selectedCategory.name %>
      </h1>
      <div>
        <h2 class="fs-5 fw-light">
          <%= selectedCategory.description %>
        </h2>
      </div>
      <% if (records !="" ) { %>
        <% records.forEach((item)=> { %>
          <div class="card mb-3 mx-auto my-4 shadow" style="max-width: 540px;">
            <div class="row g-0">
              <div class="col-md-8">
                <div class="card-body">
                  <a class="text-decoration-none text-dark" href=<%=`/item/${item._id}` %>>
                    <h5 class="card-title">
                      <%= item.albumName %>
                    </h5>
                  </a>
                  <p class="card-text mb-2">
                    <%= item.artistName %>
                  </p>
                  <p class="card-text mb-1"><small class="text-danger">
                      $<%= item.price %>
                    </small></p>
                  <p class="card-text mb-1"><small class="text-muted">
                      <%= item.quantity%> in stock
                    </small></p>
                  <a href=<%=`/category/${item.categoryId}` %> class="card-text mb-1 btn btn-sm btn btn-outline-success
                    mt-1">
                    <%= item.categoryName %>
                  </a>
                </div>
              </div>
              <div class="col-md-4 d-flex p-3 align-items-center">
                <div class="square-container">
                  <div class="square-img">
                    <img src=<%=item.image %> class="" alt="
                    ...">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
            <% } %>

              <div class="d-flex  my-4">
                <% if (selectedCategory._id ) { %>
                  <a href=<%=`/update-category/${selectedCategory._id}` %> class="btn btn-outline-secondary btn-md px-4"
                    >Edit</a>
                  <% if (records=="" ) { %>
                    <a class="btn  btn-md  px-4  btn-danger ms-4" href=<%=`/deleteCategory/${selectedCategory._id} `%>
                      >Delete</a>
                    <% } %>
                      <% }%>
                        <a class="btn  btn-md  px-4  btn-primary ms-auto" href=<%=`/new-item/${selectedCategory._id}` %>
                          >New
                          Album</a>
              </div>

    </div>
  </main>
  <%- include("include/_footer") -%>