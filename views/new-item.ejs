<%- include("include/_navigation") -%>
    <main class=" flex-grow-1 ">
        <div class="container p-4">
            <h1>New Record</h1>
            <form method="post" action=<%=http==="post" ? "/new-item" : `/update-item/${record._id}` %>
                style="max-width:450px;">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Album Name</label>
                    <input required class="form-control" id="exampleInputEmail1" name="albumName" value="<%= record ?
                        record.albumName : '' %>" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Artist Name</label>
                    <input required class="form-control" value="<%= record ?
                        record.artistName : '' %>" id="exampleInputEmail1" name="artistName"
                        aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Description</label>
                    <textarea style="width: 100%" required rows="3" name="description" class="form-control" name=""
                        id=""><%= record ? record.description : '' %></textarea>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Price</label>
                    <input name="price" type="number" value="<%= record ?
                        record.price : '' %>" step="0.01" style="width: 100%" required rows="3" class="form-control"
                        name="" id=""></input>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Item Quantity</label>
                    <input value="<%= record ?
                        record.quantity : '' %>" type="number" name="quantity" style="width: 100%" required rows="3"
                        class="form-control" name="" id=""></input>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Album Cover URL</label>
                    <input value="<%= record ?
                        record.image : '' %>" required class="form-control" id="exampleInputEmail1" name="image"
                        aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Category</label>
                    <select type="number" step="0.01" style="width: 100%" required rows="3" class="form-select"
                        name="category" id="">
                        <% if (category !="" ) { %>
                            <% category.forEach((item)=> { %>
                                <option value=<%=`${item._id}` %>
                                    <% if(record){%>
                                        <%= record.categoryId.equals(item._id) ? "selected" : '' %>
                                            <%}%>
                                                >
                                                <%= item.name %>
                                </option>

                                <% }) %>
                                    <% } %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </form>
        </div>
    </main>
    <%- include("include/_footer") -%>